<% layout('layouts/boilerplate') %>
<div class="row">
	<div class="card shadow bgFra">
		<div class="card-body">
			<h1 class="text-center mdText contentFont">Modifiez cet article</h1>
			<div class="col-lg-6 offset-lg-3 col-xl-8 offset-xl-2">
				<form action="/articles/<%=article._id%>?_method=PUT" method="POST" novalidate class="validateForm" enctype="multipart/form-data">
					<div class="mb-3">
						<label class="form-label smText contentFont" for="titre">Titre</label>
						<input class="form-control bgFra" type="text" id="titre" name="article[titre]" value="<%=article.titre%>" autofocus required>
						<div class="valid-feedback">
							G&eacute;nial!
						</div>
					</div>
					<div class="mb-3">
						<label for="image" class="form-label smText contentFont">Ajoute image(s)...</label>
						<input class="form-control bgFra" type="file" id="image" multiple name="image">
					</div>
					<div class="mb-3">
						<label class="form-label smText contentFont" for="contenu">Contenu</label>
						<textarea class="form-control bgFra" type="text" id="contenu" name="article[contenu]" required><%= article.contenu %></textarea>
						<div class="valid-feedback">
							Une &oelig;uvre magnifique!
						</div>
					</div>
					<div class="mb-3">
						<% article.images.forEach(function(img, i) { %>
						<img src="<%= img.thumbnail %>" class="img-thumbnail bgFra" alt="">
						<div class="form-check-inline">
							<input type="checkbox" id="image-<%= i %>" name="destroyImg[]" value="<%= img.filename %>">
						</div>
						<label class="ccBtn mdBtn" for="image-<%= i %>">Supprimer</label>
						<% }) %>
					</div>
					<div class="mb-3">
						<button class="ccBtn mdBtn">Modifiez l'article</button>
					</div>
				</form>
				<div>
					<a class="ccBtn mdBtn" href="/articles/<%= article._id %>">Retournez &agrave; l'article</a>
				</div>
			</div>
		</div>
	</div>
</div>